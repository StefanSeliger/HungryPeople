<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hungry People</title>
    <link rel="stylesheet" href="">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>

<body>
    <!-- Hero Header -->
    <header>
        <%- include("../partials/header.ejs") %>
    </header>

    <!-- Main -->
    <main class="feedbackMain">
        <!-- Feedback Form -->
        <section>
            <h2>YOUR FEEDBACK</h2>
            <img src="/image/underline.png" alt="underline">
            <!-- Table Booking Form -->
            <form action="">
                <div>
                    <input type="text" name="feedbackName" id="feedbackName" placeholder="Name">
                    <select name="feedbackStars" id="feedbackStars" placeholder="Stars">
                        <option value="one">1</option>
                        <option value="two">2</option>
                        <option value="three">3</option>
                        <option value="four">4</option>
                        <option value="five">5</option>
                    </select>
                </div>
                <div>
                    <input type="text" name="feedbackMessage" id="feedbackMessage" placeholder="Your Message">
                </div>
                <div>
                    <input type="submit" value="SEND NOW">
                </div>
            </form>
        </section>
        <section>
            <img src="/image/FeedbackImg.png" alt="fireplace">
        </section>
        <p>Mon - Fri: 8PM - 10PM, Sat - Sun: 8PM - 3AM</p>
    </main>

    <!-- Footer -->
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>

</body>

</html>